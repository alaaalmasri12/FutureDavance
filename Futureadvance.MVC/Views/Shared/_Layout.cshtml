@using Futureadvance.Utility
@using Microsoft.AspNetCore.Http;
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor httpcontexts; 
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Futureadvance</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Futureadvance.MVC.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <partial name="_Notifcation" />
    <header>
        <nav class="navbar navbar-expand-lg bg-primary" data-bs-theme="dark">
            <div class="container">
                <a class="navbar-brand" href="#">Futureadvance</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        @if (httpcontexts.HttpContext.Session.GetString(StaticDetails.Sessiontoken) != null && httpcontexts.HttpContext.Session.GetString(StaticDetails.Sessiontoken).Length>0)
                        {
                            @if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link " asp-area="Admin" asp-controller="AdminDashbored" asp-action="Index">
                                        Dashbored
                                    </a>
                                </li>
                            }
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link active" asp-area="User" asp-controller="Home" asp-action="Index">
                                    Home
                                    <span class="visually-hidden">(current)</span>
                                </a>
                            </li>
                        }
                       
                        
                    </ul>
                    <div class="d-flex userlogin">
                        <ul>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" data-bs-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">Actions</a>
                                <div class="dropdown-menu">
                                    @if (httpcontexts.HttpContext.Session.GetString(StaticDetails.Sessiontoken) != null && httpcontexts.HttpContext.Session.GetString(StaticDetails.Sessiontoken).Length > 0)
                                    {
                                        <a class="dropdown-item" asp-area="User" asp-controller="Security" asp-action="logout">Logout</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" asp-area="User" asp-controller="Security" asp-action="LoginForm">Login</a>
                                        <a class="dropdown-item" asp-area="User" asp-controller="Security" asp-action="RegisterForm">Register</a>
                                    }
                                   
                                    

                                </div>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Futureadvance - <a asp-area="User" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdn.datatables.net/1.13.7/js/jquery.dataTables.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
